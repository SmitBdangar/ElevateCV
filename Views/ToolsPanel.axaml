<UserControl
    x:Class="Luminos.Views.ToolsPanel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Luminos.Controls">

    <Border Padding="10">
        <StackPanel Spacing="12">

            <TextBlock Text="Color" FontWeight="Bold"/>

            <controls:HexColorGrid x:Name="HexGrid" Height="190"/>

            <TextBlock Text="Brush Size"/>
            <Slider x:Name="BrushSizeSlider" Minimum="1" Maximum="100" Value="15"/>

            <TextBlock Text="Opacity"/>
            <Slider x:Name="OpacitySlider" Minimum="0" Maximum="1" Value="1"/>

        </StackPanel>
    </Border>

</UserControl>
