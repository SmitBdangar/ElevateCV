<UserControl
    x:Class="Pixellum.Views.ToolsPanel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Pixellum.Controls">

    <Border Padding="10">
<StackPanel Margin="10" Spacing="10">

    <TextBlock Text="Color" Foreground="White" />

    <!-- ADD THIS -->
    <controls:ColorWheel x:Name="ColorPicker" Width="140" Height="140"/>

    <Border x:Name="ColorPreview"
            Width="40" Height="40"
            CornerRadius="20"
            Background="White"
            HorizontalAlignment="Left"/>

    <TextBlock Text="Brush Size" Foreground="White" Margin="0,20,0,0"/>
    <Slider x:Name="BrushSizeSlider" Minimum="1" Maximum="100"/>

    <TextBlock Text="Opacity" Foreground="White" Margin="0,20,0,0"/>
    <Slider x:Name="OpacitySlider" Minimum="0" Maximum="1"/>

</StackPanel>
    </Border>

</UserControl>
