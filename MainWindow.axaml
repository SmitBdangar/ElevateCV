<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Luminos.MainWindow"
        xmlns:views="clr-namespace:Luminos.Views"
        Width="1000" Height="700"
        Title="LUMINOS">

    <DockPanel>

        <!-- LEFT TOOLBAR -->
        <StackPanel DockPanel.Dock="Left" Width="60" Background="#2b2b2b" Spacing="8" Margin="10"
>
            <Button Content="✏" FontSize="24"/>
            <Button Content="🧽" FontSize="24"/>
            <Button Content="✂" FontSize="24"/>
        </StackPanel>

        <!-- TOP MENU BAR -->
        <StackPanel DockPanel.Dock="Top" Background="#202020" Height="40" Orientation="Horizontal" Margin="10"
>
            <TextBlock Text="File" Margin="10" Foreground="White"/>
            <TextBlock Text="Edit" Margin="10" Foreground="White"/>
            <TextBlock Text="View" Margin="10" Foreground="White"/>
        </StackPanel>

        <!-- MAIN CANVAS AREA -->
       <views:CanvasView Margin="10"/>


    </DockPanel>
</Window>
