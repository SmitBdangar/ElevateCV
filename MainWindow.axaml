<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Luminos.Views"
        x:Class="Luminos.MainWindow"
        Width="900" Height="600"
        Title="Luminos">

    <Grid ColumnDefinitions="60, *">
        
        <!-- LEFT TOOLBAR -->
        <StackPanel Background="#2B2B2B" Orientation="Vertical" Spacing="6" Margin="6">
            <Rectangle Width="40" Height="40" Fill="Red"    Name="RedColor"/>
            <Rectangle Width="40" Height="40" Fill="Green"  Name="GreenColor"/>
            <Rectangle Width="40" Height="40" Fill="Blue"   Name="BlueColor"/>
            <Rectangle Width="40" Height="40" Fill="Yellow" Name="YellowColor"/>
            <Rectangle Width="40" Height="40" Fill="White"  Name="WhiteColor"/>
            <Rectangle Width="40" Height="40" Fill="Black"  Name="BlackColor"/>
        </StackPanel>

        <!-- DRAWING CANVAS -->
        <views:CanvasView Grid.Column="1" Name="Canvas"/>
    </Grid>

</Window>
