<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:Luminos.Views"
    xmlns:controls="clr-namespace:Luminos.Controls"
    x:Class="Luminos.MainWindow"
    Width="1000" Height="700"
    Title="Luminos">

    <Grid RowDefinitions="Auto, *" Margin="8">

        <!-- Toolbar Wrapped to Fix Padding Issue -->
        <Border Padding="8">
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Top">

                <!-- 🎨 Color Wheel -->
                <controls:ColorWheel x:Name="ColorWheel" Width="150" Height="150"/>

                <!-- ✏ Brush Size -->
                <StackPanel>
                    <TextBlock Text="Brush Size" Margin="0,0,0,4"/>
                    <Slider x:Name="BrushSizeSlider" Minimum="1" Maximum="50" Value="10" Width="160"/>
                </StackPanel>

                <!-- 🧽 Eraser -->
                <Button x:Name="EraserButton" Content="Eraser" Width="80"/>

            </StackPanel>
        </Border>

        <!-- Canvas workspace -->
        <views:CanvasView Grid.Row="1" Margin="4" Background="White"/>

    </Grid>
</Window>
