<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Luminos.Views"
        x:Class="Luminos.MainWindow"
        Title="Luminos - Digital Painting"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <!-- Top Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="OnNewClicked"/>
                <MenuItem Header="_Open" Click="OnOpenClicked"/>
                <Separator/>
                <MenuItem Header="_Save" Click="OnSaveClicked"/>
                <MenuItem Header="E_xport PNG" Click="OnExportPngClicked"/>
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="OnUndoClicked" InputGesture="Ctrl+Z"/>
                <MenuItem Header="_Redo" Click="OnRedoClicked" InputGesture="Ctrl+Y"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="#2a2a2a" Padding="6">
            <TextBlock Name="StatusText" 
                       Text="Ready | Zoom: 100% | Tool: Brush"
                       VerticalAlignment="Center"
                       Foreground="White" />
        </Border>

        <!-- Layout -->
        <Grid ColumnDefinitions="250,*,250">

            <views:ToolsPanel Grid.Column="0" Name="ToolsPanelControl" />

            <Border Grid.Column="1" Background="#333" Padding="20">
                <views:CanvasView Name="MainCanvasView"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
            </Border>

            <Border Grid.Column="2" Background="#444" Padding="10">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Layers Panel" Foreground="White" FontSize="16"/>
                </StackPanel>
            </Border>

        </Grid>

    </DockPanel>

</Window>
