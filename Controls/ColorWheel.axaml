<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Luminos.Controls.ColorWheel"
             MinHeight="200" MinWidth="200">
    
    <Border Background="Transparent" 
            Name="ColorWheelSurface"
            BorderBrush="DarkGray"
            BorderThickness="1"
            CornerRadius="5"
            PointerPressed="ColorWheelSurface_PointerPressed"
            PointerMoved="ColorWheelSurface_PointerMoved"
            PointerReleased="ColorWheelSurface_PointerReleased">
        
        <TextBlock Text="[Color Wheel Control]" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Opacity="0.5"/>
    </Border>
    
</UserControl>